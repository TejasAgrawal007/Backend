<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <main class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        <form action="/create" method="post">
            <h1 class="text-3xl font-semibold text-white py-5">Create User</h1>
            <input type="text" name="username" class="px-5 py-2 rounded-md bg-transparent border-zinc-8 border-2"  placeholder="username">
            <input type="email" name="email" class="px-5 py-2 rounded-md bg-transparent border-zinc-8 border-2"  placeholder="email">
            <input type="text" name="password" class="px-5 py-2 rounded-md bg-transparent border-zinc-8 border-2"  placeholder="password">
            <input type="number" name="age" class="px-5 py-2 rounded-md bg-transparent border-zinc-8 border-2"  placeholder="age">
            <button class="btn bg-blue-600 px-4 py-3 rounded-lg text-white">Create User</button>
        </form>
    </main>
</body>
</html>